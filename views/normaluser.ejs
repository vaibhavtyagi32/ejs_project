    <style>
        * {
            margin: 0;
            padding: 0;
            border: border-box;
        }

        .navbar {
            width: 100%;
            height: 60px;
            background-color: black;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-evenly;
        }

        /* box 2*/
        .nav-logo {
            height: 50px;
            width: 100px;
        }

        .logo {
            background-image: url("./Amazon-Logo-Black.jpg");
            height: 50px;
            background-size: cover;
            width: 100%;
        }

        .border {
            border: 2px solid transparent;
        }

        .border:hover {
            border: 2px solid white;
        }

        /*box 3*/
        .add-first {
            color: #cccccc;
            font-size: 1 rem;
            margin-left: 15px;
        }

        .add-sec {
            margin-left: 4px;

        }

        .add-icon {
            display: flex;
            align-items: center;
        }

        /* box 4*/
        .nav-search {
            margin-left: 4px;
            display: flex;
            justify-content: space-evenly;
            background-color: orange;
            width: 620px;
            height: 40px;
            border-radius: 2px;
        }

        .search-select {
            background-color: #f3f3f3;
            width: 50px;
            text-align: center;
            border-top-left-radius: 2px;
            border-bottom-left-radius: 2px;
            border: none;
        }

        .nav-search:hover {
            border: 2px solid orange;
        }

        .search-input {
            width: 100%;
            font-size: 1 rem;
            border: none;
        }

        .search-icon {
            display: flex;
            width: 45px;
            justify-content: center;
            align-items: center;
            font-size: 1.2rem;
            color: #0f1111;
        }

        /* box 5*/
        span {
            font-size: 0.7 rem;
            margin-left: 20px;
        }

        .nav-second {
            font-size: 0.85rem;
            font-weight: 700;
            margin-left: 20px;
        }

        /*box 6 i si used for to increase the size of icon*/
        .nav-cart i {
            font-size: 30px;

        }

        .panel {
            height: 39px;
            background-color: #222f3d;
            display: flex;
            color: white;
            align-items: center;
            justify-content: space-evenly;
        }

        .panel-ops p {
            display: inline;
            margin-left: 10px;
        }

        .panel-ops {
            width: 70%;
            font-size: 0.85rem;
        }

        .panel-deals {
            font-size: 1rem;
            font-weight: 700;
        }

        /*hero section*/
        .hero-section {
            background-image: url(./mobile.jpg);
            height: 500px;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: flex-end;
        }

        .hero-msg {
            background-color: white;
            text-color: black;
            height: 40px;
            display: flex;
            align-items: center;
            /*for verticaly centred*/
            justify-content: center;
            /*for horizontally centred*/
            font-size: 0.85rem;
            width: 80%;
            margin-bottom: 25px;



        }

        .hero-msg a {
            color: #007185;
        }

        /*shop section*/
        .shop-section {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-evenly;
            background-color: #0f6d5b47;
        }

        .box {
            height: 400px;
            width: 23%;
            background-color: white;
            padding: 20px 0px 15px;
            margin-top: 15px;
        }

        .box-img {
            height: 300px;
            background-size: no reapet;
            background-size: cover;
            margin-top: 10px;
            margin-bottom: 10px;

        }

        .box-content {
            margin-left: 10px;
            margin-right: 10px;

        }

        .box-content p {
            color: #007185;
        }

