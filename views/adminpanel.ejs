    <script>
        // Get the date and time display element
        const dateTimeDisplayToggle = document.getElementById('date-time-display-toggle');
        const dynamicDateTime = document.getElementById('dynamic-date-time');

        // Function to get current date and time
        function getCurrentDateTime() {
            const now = new Date();
            const options = { year: 'numeric', month: 'long', day: 'numeric' }; // Format for date
            const date = now.toLocaleDateString(undefined, options); // Get formatted date
            const time = now.toLocaleTimeString(); // Get formatted time
            return `${date}, ${time}`; // Combine date and time
        }

        // Event listener for clicking the calendar icon
        dateTimeDisplayToggle.addEventListener('click', function (e) {
            e.preventDefault(); // Prevent any default action
            const currentDateTime = getCurrentDateTime();

            // Toggle the display of date and time
            if (dynamicDateTime.style.display === 'none') {
                dynamicDateTime.textContent = currentDateTime;
                dynamicDateTime.style.display = 'inline'; // Show the date and time
            } else {
                dynamicDateTime.style.display = 'none'; // Hide the date and time
            }
        });

        // Optional: Auto-update the date and time every second if visible
        setInterval(function () {
            if (dynamicDateTime.style.display !== 'none') {
                dynamicDateTime.textContent = getCurrentDateTime();
            }
        }, 1000); // Update every 1 second
    </script>
