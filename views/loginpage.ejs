<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="icon" href="/images/logo.jpg" type="image/jpg">

    <title>Login - Book Emporium</title>
    <style>
        body {
            background: linear-gradient(to left, #FFF9D0, #CAF4FF, #A0DEFF, #5AB2FF);
            height: 100vh;
            margin: 0;
        }



        .gradient-custom-2 {
            background: linear-gradient(to bottom, #A0D5E8, #71C3E6, #4DA4D2, #0099CC, #0077B3);
        }


        /* Ensure full height for larger screens */
        @media (min-width: 768px) {
            .gradient-form {
                height: 100vh !important;
            }

            .gradient-custom-2 {
                border-top-right-radius: .3rem;
                border-bottom-right-radius: .3rem;
            }
        }

        /* Adjustments for smaller screens */
        @media (max-width: 767px) {
            .gradient-form {
                height: auto;
                /* Allow for natural height on smaller screens */
                padding: 20px;
                /* Add some padding */
            }

            .card {
                border-radius: 1rem;
                /* Slightly more rounded corners */
            }

            .gradient-custom-2 {
                border-top-right-radius: .3rem;
                border-bottom-right-radius: .3rem;
                padding: 20px;
                /* Adjust padding for mobile */
            }

            .input-group-text {
                padding: 0.5rem;
                /* Adjust input group padding */
            }

            .form-control {
                padding-left: 1.5rem;
                /* Adjust input padding for icons */
            }

            h4 {
                font-size: 1.5rem;
                /* Responsive heading size */
            }

            p {
                font-size: 0.9rem;
                /* Responsive paragraph size */
            }

            .text-center {
                margin-bottom: 1rem;
                /* Spacing for text center */
            }
        }

        /* Optional: Additional styles for tablets */
        @media (min-width: 768px) and (max-width: 1024px) {
            .gradient-custom-2 {
                padding: 30px;
                /* Adjust padding for tablets */
            }

            .text-white {
                font-size: 1rem;
                /* Adjust text size for better readability */
            }
        }


        .input-group-text {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .input-group .form-control {
            padding-left: 5px;
            /* Adjust padding to accommodate icon */
        }

        .logo {
            background-color: transparent;
            background: none;
        }

        #logo {
            background-color: transparent;
            background: none;
            width: 50%;
            align-items: center;
            justify-content: center;
            border-radius: 10%;
        }



        /* Method 2: Remove Background Image/Color  */
        /* .logo { */
        /* } */
    </style>
</head>

<body>
    <section class="h-100 gradient-form">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card text-black border-0 rounded-4 shadow">
                        <!-- Card with rounded corners and shadow -->
                        <div class="row">
                            <!-- Login Form Column -->
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">
                                    <div class="text-center">
                                        <img src="/images/logo.jpg"
                                            style="width: 90px; filter: brightness(0) invert(1);" alt="logo">
                                        <h1>Login</h1>
                                        <h3 class="mt-3 mb-5 pb-1">to Book Emporium!!</h3>
                                    </div>

                                    <form action="/login" method="post">
                                        <div class="form-outline mb-3">
                                            <div class="input-group">
                                                <span class="input-group-text bg-white border-end-0" id="basic-addon1">
                                                    <i class="bi bi-person" style="color: #000000;"></i>
                                                </span>
                                                <input id="email" type="email"
                                                    placeholder="Phone number or email address" required autofocus
                                                    class="form-control shadow-sm border-start-0"
                                                    aria-describedby="basic-addon1" name="email">
                                            </div>
                                        </div>

                                        <div class="form-outline mb-3">
                                            <div class="input-group">
                                                <span class="input-group-text bg-white border-end-0" id="basic-addon1">
                                                    <i class="bi bi-key" style="color: #000000;"></i>
                                                </span>
                                                <input id="password" type="password" placeholder="Enter Password"
                                                    required class="form-control shadow-sm border-start-0"
                                                    aria-describedby="basic-addon1" name="password">
                                            </div>
                                        </div>

                                        <div class="custom-control custom-checkbox mb-3 d-flex justify-content-between">
                                            <div>
                                                <input id="customCheck1" type="checkbox" class="custom-control-input">
                                                <label for="customCheck1" class="custom-control-label text"
                                                    id="remember">Remember password</label>
                                            </div>
                                            <a class="text-muted" href="#!">Forgot password?</a>
                                        </div>

                                        <div class="text-center pt-1 mb-3 pb-1">
                                            <button data-mdb-button-init data-mdb-ripple-init
                                                class="btn btn-outline-primary btn-lg btn-block mb-3" type="submit">Sign
                                                In</button>
                                        </div>

                                        <div class="d-flex align-items-center justify-content-center pb-4">
                                            <p>Don't have an account? <a href="/user/signup">Register</a></p>
                                        </div>
                                    </form>


                                </div>
                            </div>

                            <!-- Additional Information Column -->
                            <!-- <div class="col-lg-6 d-flex align-items-center gradient-custom-2 rounded-end-4 shadow">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4 rounded-4">
                                    <div class="mb-5 text-center">
                                        <img src="/images/logo.jpg" alt="logo" style="width: 185px;">
                                    </div>
                                    <h4 class="mb-4">Your Gateway to Knowledge</h4>
                                </div>
                            </div> -->
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2 rounded-end-4 shadow">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4 rounded-4 text-center">
                                    <div class="mb-5">
                                        <img src="/images/logo.jpg" alt="logo" id="logo">
                                    </div>
                                    <h4 class="mb-4">Your Gateway to Knowledge</h4>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>